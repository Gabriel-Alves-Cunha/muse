{
	"name": "muse",
	"version": "0.9.3",
	"description": "Just an Youtube music downloader and player.",
	"author": "Gabriel Alves Cunha <gabriel925486@outlook.com>",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/Gabriel-Alves-Cunha/muse.git",
		"type": "git"
	},
	"main": "app/index.js",
	"scripts": {
		"preview": "yarn build && cross-env NODE_ENV=production electron --trace-warnings --unhandled-rejections=strict --inspect app",
		"devn": "cross-env NODE_ENV=development elecrun --clean-cache --vite --preload 'preload.ts'",
		"dev": "cross-env NODE_ENV=development elecrun --vite --preload 'preload.ts'",
		"build": "elecrun build --preload 'preload.ts' && vite build",
		"dist:test": "yarn build && electron-builder --dir --x64 ",
		"postinstall": "electron-builder install-app-deps",
		"lint": "eslint ./ --ext .ts --ext .tsx --ext .ts",
		"dist": "yarn build && electron-builder --x64 ",
		"coverage": "vitest run --coverage",
		"fmt": "prettier --use-tabs -w .",
		"release": "electron-builder",
		"clean": "elecrun clean",
		"test": "vitest"
	},
	"devDependencies": {
		"@faker-js/faker": "6.1.2",
		"@radix-ui/react-dialog": "^0.1.7",
		"@stitches/react": "^1.2.7",
		"@types/debug": "^4.1.7",
		"@types/fluent-ffmpeg": "^2.1.20",
		"@types/node": "^17.0.24",
		"@types/react": "^18.0.5",
		"@types/react-dom": "^18.0.1",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"@vitejs/plugin-react": "^1.3.1",
		"@vitest/ui": "^0.9.3",
		"c8": "^7.11.0",
		"cross-env": "^7.0.3",
		"deepmerge": "^4.2.2",
		"electron": "^18.0.4",
		"electron-builder": "^23.0.3",
		"electron-devtools-installer": "^3.2.0",
		"electron-run": "^2.3.1",
		"esbuild": "^0.14.36",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"happy-dom": "^2.55.0",
		"prettier": "^2.6.2",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-error-boundary": "^3.1.4",
		"react-icons": "^4.3.1",
		"react-toastify": "^8.2.0",
		"react-virtuoso": "^2.9.2",
		"reactjs-popup": "^2.0.5",
		"readline": "^1.3.0",
		"tslib": "^2.3.1",
		"typescript": "^4.6.3",
		"vite": "^2.9.5",
		"vitest": "^0.9.3",
		"zustand": "^3.7.2"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"debug": "^4.3.4",
		"fluent-ffmpeg": "^2.1.2",
		"node-taglib-sharp": "^4.0.2",
		"sanitize-filename": "^1.6.3",
		"ytdl-core": "^4.11.0"
	},
	"prettier": {
		"trailingComma": "all",
		"arrowParens": "avoid",
		"useTabs": true
	}
}
