{
	"name": "muse",
	"version": "1.3.0",
	"repository": "https://github.com/Gabriel-Alves-Cunha/muse.git",
	"description": "Just an YouTube music downloader and player.",
	"author": "Gabriel Alves Cunha <gabriel925486@outlook.com>",
	"main": "app/index.js",
	"type": "commonjs",
	"license": "MIT",
	"scripts": {
		"preview": "yarn build && cross-env NODE_ENV=production electron --trace-warnings --unhandled-rejections=strict --inspect app",
		"dev:clean": "cross-env DEBUG=muse,muse:playlists NODE_ENV=development elecrun --clean-cache --vite --preload 'preload.ts'",
		"dev": "cross-env DEBUG=muse NODE_ENV=development elecrun --vite --preload 'preload.ts'",
		"release:test": "yarn build && electron-builder --dir --x64 --prepackaged ./prepackaged",
		"release": "yarn build && electron-builder --x64 --publish=never",
		"build": "elecrun build --preload 'preload.ts' && vite build",
		"lint": "eslint ./src/ --ext .ts --ext .tsx --ext .js",
		"postinstall": "electron-builder install-app-deps",
		"test": "cross-env DEBUG=muse:tests vitest",
		"ts:check": "tsc --noEmit --pretty",
		"coverage": "vitest run --coverage",
		"fmt:check": "dprint check",
		"clean": "elecrun clean",
		"fmt": "dprint fmt"
	},
	"devDependencies": {
		"@radix-ui/react-context-menu": "^1.0.0",
		"@radix-ui/react-dialog": "^1.0.0",
		"@radix-ui/react-popover": "^1.0.0",
		"@radix-ui/react-select": "^1.0.0",
		"@stitches/react": "^1.2.8",
		"@types/debug": "^4.1.7",
		"@types/fluent-ffmpeg": "^2.1.20",
		"@types/koa": "^2.13.5",
		"@types/koa-router": "^7.4.4",
		"@types/node": "^18.6.3",
		"@types/qrcode": "^1.4.2",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.32.0",
		"@typescript-eslint/parser": "^5.32.0",
		"@vitejs/plugin-react": "^2.0.0",
		"@vitest/ui": "^0.20.3",
		"c8": "^7.12.0",
		"cross-env": "^7.0.3",
		"debug": "^4.3.4",
		"dprint": "^0.30.3",
		"electron": "^20.0.1",
		"electron-builder": "^23.3.3",
		"electron-devtools-installer": "^3.2.0",
		"electron-run": "^2.3.1",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"happy-dom": "^6.0.4",
		"js-coroutines": "^2.4.36",
		"qrcode": "^1.5.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-error-boundary": "^3.1.4",
		"react-icons": "^4.4.0",
		"react-toastify": "^9.0.7",
		"react-tooltip": "^4.2.21",
		"react-virtuoso": "^2.16.6",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4",
		"vite": "^3.0.4",
		"vitest": "^0.20.3",
		"zustand": "4.0.0"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"electron-updater": "^5.2.1",
		"fastest-validator": "^1.12.0",
		"fluent-ffmpeg": "^2.1.2",
		"koa": "^2.13.4",
		"koa-router": "^12.0.0",
		"node-taglib-sharp": "^5.0.0",
		"sanitize-filename": "^1.6.3",
		"ytdl-core": "^4.11.0"
	}
}
