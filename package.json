{
	"name": "muse",
	"version": "0.9.1",
	"description": "Just an Youtube music downloader and player.",
	"author": "Gabriel Alves Cunha",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Gabriel-Alves-Cunha/muse.git"
	},
	"main": "app/index.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development elecrun --vite --preload 'preload.ts'",
		"devn": "cross-env NODE_ENV=development elecrun --clean-cache --vite --preload 'preload.ts'",
		"preview": "yarn build && cross-env NODE_ENV=production electron --trace-warnings --unhandled-rejections=strict --inspect app",
		"build": "elecrun build --preload 'preload.ts' && vite build",
		"clean": "elecrun clean",
		"fmt": "prettier --use-tabs -w .",
		"lint": "eslint ./ --ext .ts --ext .tsx --ext .ts",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"forge": "yarn build && electron-forge --arch=x64 make",
		"forge:start": "yarn build && cross-env DEBUG=electron-forge:* electron-forge --enable-logging --inspect-electron start -- --trace-warnings",
		"forge:lint": "electron-forge lint",
		"electron:lint": "electronegativity"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.63",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.63",
		"@electron-forge/maker-zip": "^6.0.0-beta.63",
		"@electron-forge/plugin-electronegativity": "^6.0.0-beta.63",
		"@faker-js/faker": "6.0.0-beta.0",
		"@types/debug": "^4.1.7",
		"@types/fluent-ffmpeg": "^2.1.20",
		"@types/node": "^17.0.23",
		"@types/react": "^17.0.42",
		"@types/react-dom": "^17.0.14",
		"@types/react-virtualized-auto-sizer": "^1.0.1",
		"@types/react-window": "^1.8.5",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vitejs/plugin-react": "^1.2.0",
		"@vitest/ui": "^0.7.10",
		"c8": "^7.11.0",
		"cross-env": "^7.0.3",
		"electron": "^17.2.0",
		"electron-run": "^2.2.0",
		"esbuild": "^0.14.27",
		"eslint": "^8.11.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.3.0",
		"happy-dom": "^2.50.0",
		"prettier": "^2.6.0",
		"readline": "^1.3.0",
		"tslib": "^2.3.1",
		"typescript": "^4.6.2",
		"vite": "^2.8.6",
		"vitest": "^0.7.10"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@radix-ui/react-icons": "^1.1.0",
		"@stitches/react": "^1.2.7",
		"debug": "^4.3.4",
		"deepmerge": "^4.2.2",
		"electron-squirrel-startup": "^1.0.0",
		"fluent-ffmpeg": "^2.1.2",
		"node-taglib-sharp": "^4.0.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-icons": "^4.3.1",
		"react-toastify": "^8.2.0",
		"react-virtualized-auto-sizer": "^1.0.6",
		"react-window": "^1.8.6",
		"reactjs-popup": "^2.0.5",
		"sanitize-filename": "^1.6.3",
		"ytdl-core": "^4.11.0",
		"zustand": "^3.7.1"
	},
	"config": {
		"forge": "./forge.config.js"
	},
	"prettier": {
		"trailingComma": "all",
		"arrowParens": "avoid",
		"useTabs": true
	}
}
