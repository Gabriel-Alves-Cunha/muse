{
	"name": "muse",
	"version": "1.0.0",
	"repository": "https://github.com/Gabriel-Alves-Cunha/muse.git",
	"description": "Just an Youtube music downloader and player.",
	"author": "Gabriel Alves Cunha <gabriel925486@outlook.com>",
	"main": "app/index.js",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"preview": "yarn build && cross-env NODE_ENV=production electron --trace-warnings --unhandled-rejections=strict --inspect app",
		"dev:clean": "cross-env DEBUG=muse,muse:playlists NODE_ENV=development elecrun --clean-cache --vite --preload 'preload.ts'",
		"dev": "cross-env DEBUG=muse NODE_ENV=development elecrun --vite --preload 'preload.ts'",
		"release:test": "yarn build && electron-builder --dir --x64 --prepackaged ./prepackaged",
		"release": "yarn build && electron-builder --x64 --publish=never",
		"build": "elecrun build --preload 'preload.ts' && vite build",
		"postinstall": "electron-builder install-app-deps",
		"lint": "eslint ./ --ext .ts --ext .tsx --ext .js",
		"test": "cross-env DEBUG=muse:tests vitest",
		"coverage": "vitest run --coverage",
		"fmt:check": "dprint check",
		"clean": "elecrun clean",
		"fmt": "dprint fmt"
	},
	"devDependencies": {
		"@radix-ui/react-context-menu": "^0.1.6",
		"@radix-ui/react-dialog": "^0.1.7",
		"@radix-ui/react-popover": "^0.1.6",
		"@radix-ui/react-select": "^0.1.1",
		"@stitches/react": "^1.2.8",
		"@types/debug": "^4.1.7",
		"@types/fluent-ffmpeg": "^2.1.20",
		"@types/node": "^17.0.40",
		"@types/react": "^18.0.12",
		"@types/react-dom": "^18.0.5",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vitejs/plugin-react": "^1.3.2",
		"@vitest/ui": "^0.14.0",
		"c8": "^7.11.3",
		"cross-env": "^7.0.3",
		"debug": "^4.3.4",
		"dprint": "^0.29.1",
		"electron": "^19.0.3",
		"electron-builder": "^23.0.3",
		"electron-devtools-installer": "^3.2.0",
		"electron-run": "^2.3.1",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"js-coroutines": "^2.4.36",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-error-boundary": "^3.1.4",
		"react-icons": "^4.4.0",
		"react-toastify": "^9.0.3",
		"react-virtuoso": "^2.13.0",
		"readline": "^1.3.0",
		"tilg": "^0.1.1",
		"tslib": "^2.4.0",
		"typescript": "^4.7.3",
		"vite": "^2.9.9",
		"vitest": "^0.14.0",
		"zustand": "4.0.0-rc.1"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"electron-updater": "^5.0.1",
		"fluent-ffmpeg": "^2.1.2",
		"node-taglib-sharp": "^4.0.2",
		"sanitize-filename": "^1.6.3",
		"ytdl-core": "^4.11.0"
	},
	"prettier": {
		"trailingComma": "all",
		"arrowParens": "avoid",
		"useTabs": true
	}
}
