{
	"compilerOptions": {
		"noPropertyAccessFromIndexSignature": false,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": true,
		"noFallthroughCasesInSwitch": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,
		"experimentalDecorators": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"noUnusedParameters": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"noImplicitReturns": true,
		"noErrorTruncation": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noImplicitThis": true,
		"removeComments": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"baseUrl": "./",
		"allowJs": true,
		"checkJs": true,
		"pretty": true,
		"strict": true,
		"types": [
			"vitest/importMeta",
			"@types/*"
		],
		"paths": {
			"@i18n": [
				"src/i18n/index.ts"
			],
			"@components/*": [
				"src/components/*"
			],
			"@contexts/*": [
				"src/contexts/*"
			],
			"@modules/*": [
				"src/modules/*"
			],
			"@styles/*": [
				"src/styles/*"
			],
			"@routes/*": [
				"src/routes/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@utils/*": [
				"src/utils/*"
			],
			"@hooks/*": [
				"src/hooks/*"
			],
			"types/*": [
				"src/types/*"
			],
			"@tests/*": [
				"tests/*"
			]
		},
		"lib": [
			"DOM.Iterable",
			"ESNext",
			"DOM"
		]
	},
	"include": [
		"tests",
		"src"
	],
	"exclude": [
		"**/node_modules",
		"**/dev-build/*",
		"**/build/*",
		"**/dist/*",
		"**/.*/"
	]
}
