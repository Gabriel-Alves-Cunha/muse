{
	"compilerOptions": {
		"target": "esnext",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"allowJs": true,
		"checkJs": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"module": "es2022",
		"alwaysStrict": true,
		"pretty": true,
		"noUnusedParameters": true,
		"noErrorTruncation": true,
		"isolatedModules": true,
		"noFallthroughCasesInSwitch": true,
		"jsxImportSource": "@emotion/react",
		"strict": true,
		"jsx": "react-jsxdev",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"experimentalDecorators": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"@components": ["renderer/components/index"],
			"@components/*": ["renderer/components/*"],
			"@contexts": ["renderer/contexts/index"],
			"@contexts/*": ["renderer/contexts/*"],
			"@modules": ["renderer/modules/index"],
			"@modules/*": ["renderer/modules/*"],
			"@hooks": ["renderer/hooks/index"],
			"@styles/*": ["renderer/styles/*"],
			"@routes": ["renderer/routes/index"],
			"@utils/*": ["renderer/utils/*"],
			"@routes/*": ["renderer/routes/*"],
			"@renderer/*": ["renderer/*"],
			"@common/*": ["common/*"],
			"@main/*": ["main/*"]
		}
	},
	"exclude": ["node_modules", "app", "out", "forge.config.js", "jest.config.js"]
}
