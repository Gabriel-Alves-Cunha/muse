{
	"compilerOptions": {
		"noPropertyAccessFromIndexSignature": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"experimentalDecorators": false,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"preserveConstEnums": true,
		"noUnusedParameters": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"noImplicitReturns": true,
		"noErrorTruncation": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noImplicitThis": true,
		"removeComments": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"jsx": "react-jsx",
		"module": "ESNext",
		"baseUrl": "./src",
		"sourceMap": false,
		"allowJs": true,
		"checkJs": true,
		"pretty": true,
		"strict": true,
		"types": [
			"vitest/importMeta"
		],
		"paths": {
			"@components/*": [
				"renderer/components/*"
			],
			"@contexts/*": [
				"renderer/contexts/*"
			],
			"@modules/*": [
				"renderer/modules/*"
			],
			"@styles/*": [
				"renderer/styles/*"
			],
			"@routes/*": [
				"renderer/routes/*"
			],
			"@utils/*": [
				"renderer/utils/*"
			],
			"@hooks/*": [
				"renderer/hooks/*"
			],
			"@renderer/*": [
				"renderer/*"
			],
			"@common/*": [
				"common/*"
			],
			"@main/*": [
				"main/*"
			]
		},
		"lib": [
			"DOM.Iterable",
			"ESNext",
			"DOM",
		],
	},
	"exclude": [
		"node_modules",
		"app",
		"out"
	],
}
